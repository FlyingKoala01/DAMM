{% extends 'base/base.html.j2' %}

{% block body %}
<section class="bg-gray-50 py-3 sm:py-5">
  <div class="px-4 mx-auto w-2/3 lg:px-12">
    <div class="relative overflow-hidden bg-white shadow-md sm:rounded-lg">
      <div
        class="flex flex-col px-4 py-3 space-y-3 lg:flex-row lg:items-center lg:justify-between lg:space-y-0 lg:space-x-4">
        <div class="flex items-center flex-1 space-x-4">
          <h5>
            <span class="text-gray-500">All Bars:</span>
            <span class="">{{ bars_page.total }}</span>
          </h5>
        </div>
        <div
          class="flex flex-col flex-shrink-0 space-y-3 md:flex-row md:items-center lg:justify-end md:space-y-0 md:space-x-3">
          <button type="button"
            class="flex items-center justify-center flex-shrink-0 px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg focus:outline-none hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 ">
            <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" fill="none"
              viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
            </svg>
            Update stocks 1/250
          </button>
          <button type="button"
            class="flex items-center justify-center flex-shrink-0 px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg focus:outline-none hover:bg-gray-100 hover:text-primary-700 focus:z-10 focus:ring-4 focus:ring-gray-200 ">
            <svg class="w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24"
              stroke-width="2" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round"
                d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5m-13.5-9L12 3m0 0l4.5 4.5M12 3v13.5" />
            </svg>
            Export
          </button>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-gray-500">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
              <th scope="col" class="px-4 py-3">
                <a href="{{ url_for('.leaderboard', sort_by='position', sort_order='asc') }}">Position</a>
              </th>
              <th scope="col" class="px-4 py-3">
                <a href="{{ url_for('.leaderboard', sort_by='name', sort_order='asc') }}">Bar</a>
              </th>
              <th scope="col" class="px-4 py-3">
                <a href="{{ url_for('.leaderboard', sort_by='grade', sort_order='asc') }}">Grade</a>
              </th>
              <th scope="col" class="px-4 py-3">
                <a href="{{ url_for('.leaderboard', sort_by='sales', sort_order='asc') }}">Sales</a>
              </th>
              <th scope="col" class="px-4 py-3">
                <a href="{{ url_for('.leaderboard', sort_by='progress', sort_order='asc') }}">Progress</a>
              </th>
            </tr>
          </thead>

          <tbody>
            <tr class="border-b  hover:bg-gray-100 ">
              {% for eachbar in bars_page.items %}

              <td class="w-4 px-4 py-3">
                <div class="flex items-center">
                  {{eachbar.position}}
                </div>
              </td>
              <th scope="row" class="flex items-center px-4 py-2 font-medium text-gray-900 whitespace-nowrap ">
                {{ eachbar.name }}
              </th>
              <td class="px-4 py-2 font-medium text-gray-900 whitespace-nowrap ">
                <div class="flex items-center">
                  {% set full_beers = eachbar.grade | int %}
                  {% set half_beer = eachbar.grade - full_beers > 0.5 %}

                  {% for _ in range(full_beers) %}
                  <img src="{{ url_for('static', filename='images/beer.svg') }}" alt="beer"
                    class="w-5 h-5 transform scale-y-[-1] rotate-180">
                  {% endfor %}

                  {% if half_beer %}
                  <img src="{{ url_for('static', filename='images/beer-half.svg') }}" alt="beer-half"
                    class="w-5 h-5 mr-2 transform scale-y-[-1] rotate-180">
                  {% endif %}

                  <span class="ml-1 text-gray-500 ">{{ eachbar.grade }}</span>
                </div>

              </td>
              <td class="px-4 py-2 font-medium text-gray-900 whitespace-nowrap ">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="currentColor"
                    class="w-5 h-5 mr-2 text-gray-400" aria-hidden="true">
                    <path
                      d="M2.25 2.25a.75.75 0 000 1.5h1.386c.17 0 .318.114.362.278l2.558 9.592a3.752 3.752 0 00-2.806 3.63c0 .414.336.75.75.75h15.75a.75.75 0 000-1.5H5.378A2.25 2.25 0 017.5 15h11.218a.75.75 0 00.674-.421 60.358 60.358 0 002.96-7.228.75.75 0 00-.525-.965A60.864 60.864 0 005.68 4.509l-.232-.867A1.875 1.875 0 003.636 2.25H2.25zM3.75 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM16.5 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0z" />
                  </svg>
                  {{ eachbar.total_sales }}
                </div>
              </td>
              <td class="px-4 py-2 font-medium text-gray-900 whitespace-nowrap">
                <div class="flex items-center">
                  {% if eachbar.progress > 1 %}
                  <img src="{{ url_for('static', filename='images/arrow-double-up.svg') }}" alt="double-up"
                    class="w-3 h-3 mr-1 text-green-50">
                  {% elif eachbar.progress > 0%}
                  <img src="{{ url_for('static', filename='images/arrow-up.svg') }}" alt="up"
                    class="w-3 h-3 mr-1 text-green">
                  {% elif eachbar.progress == 0 %}
                  <img src="{{ url_for('static', filename='images/equal.svg') }}" alt="equal" class="w-3 h-3 mr-1">
                  {% elif eachbar.progress < -1 %} <img
                    src="{{ url_for('static', filename='images/arrow-double-up.svg') }}" alt="down"
                    class="w-3 h-3 mr-1 text-red transform rotate-180">
                    {% elif eachbar.progress < 0%} <img src="{{ url_for('static', filename='images/arrow-up.svg') }}"
                      alt="down" class="w-3 h-3 mr-1 text-red transform rotate-180">
                      {% endif %}
                      <span
                        class="ml-1 {% if eachbar.progress > 0 %}text-green-500{% elif eachbar.progress < 0 %}text-red-500{% else %}text-gray-500{% endif %}">
                        {{ eachbar.progress }}
                      </span>
                </div>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <nav class="flex flex-col items-start justify-between p-4 space-y-3 md:flex-row md:items-center md:space-y-0"
        aria-label="Table navigation">
        <span class="text-sm font-normal text-gray-500">
          Showing
          {% if bars_page.has_prev %}
          <span class="font-semibold text-gray-900">{{ (bars_page.prev_num - 1) * bars_page.per_page + 1 }}-{{
            (bars_page.prev_num - 1) * bars_page.per_page + bars_page.items|length }}</span>
          {% else %}
          <span class="font-semibold text-gray-900">1-{{
            bars_page.items|length }}</span>
          {% endif %}
          of
          <span class="font-semibold text-gray-900">{{ bars_page.total }}</span>
        </span>
        <ul class="inline-flex items-stretch -space-x-px">
          {% if bars_page.has_prev %}
          <li>
            <a href="{{ url_for('.leaderboard', page=bars_page.prev_num) }}"
              class="flex items-center justify-center h-full py-1.5 px-3 ml-0 text-gray-500 bg-white rounded-l-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700">
              <span class="sr-only">Previous</span>
              <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                  clip-rule="evenodd" />
              </svg>
            </a>
          </li>
          {% endif %}
          {% for page_num in bars_page.iter_pages() %}
          {% if page_num %}
          <li>
            <a href="{{ url_for('.leaderboard', page=page_num) }}"
              class="flex items-center justify-center px-3 py-2 text-sm leading-tight {{ 'text-primary-600 bg-primary-50 border-primary-300 hover:bg-primary-100 hover:text-primary-700' if page_num == bars_page.page else 'text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700' }}">
              {{ page_num }}
            </a>
          </li>
          {% endif %}
          {% endfor %}
          {% if bars_page.has_next %}
          <li>
            <a href="{{ url_for('.leaderboard', page=bars_page.next_num) }}"
              class="flex items-center justify-center h-full py-1.5 px-3 -ml-px text-gray-500 bg-white rounded-r-lg border border-gray-300 hover:bg-gray-100 hover:text-gray-700">
              <span class="sr-only">Next</span>
              <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                  clip-rule="evenodd" />
              </svg>
            </a>
          </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>
</section>

<script>
  function onError() {
    this.onerror = null;
    this.parentNode.children[0].srcset = this.parentNode.children[1].srcset = this.src;
  }
</script>

{% endblock %}